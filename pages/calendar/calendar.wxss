.container {
  padding: 20rpx;
}

.calendar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.current-date {
  font-size: 32rpx;
  font-weight: bold;
}

.arrow {
  padding: 20rpx;
  color: #666;
}

.weekday-header {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.weekday-header view {
  width: 14.28%;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.calendar-body {
  padding: 20rpx 0;
}

.calendar-row {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.calendar-cell {
  width: 14.28%;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  box-sizing: border-box;
}

.date-number {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.other-month {
  color: #ccc;
}

.has-record {
  background: #f0f9eb;
  border-radius: 8rpx;
}

.mood-level {
  font-size: 20rpx;
  color: #1AAD19;
  text-align: center;
}

.record-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  padding: 30rpx;
  box-sizing: border-box;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.close-btn {
  padding: 10rpx;
  font-size: 40rpx;
  color: #999;
}

.records-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.record-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.record-content {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  display: block;
}

.record-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
} 
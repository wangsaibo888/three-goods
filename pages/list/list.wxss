.container {
  height: 100vh;
  background: #f8f8f8;
}

.records-list {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.date-group {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.date-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f0f9eb;
}

.date {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.mood-level {
  font-size: 24rpx;
  color: #1AAD19;
  background: #fff;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.records-group {
  padding: 20rpx;
}

.record-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.record-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.record-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.loading-status {
  text-align: center;
  padding: 30rpx;
}

.loading, .no-more {
  font-size: 24rpx;
  color: #999;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 60rpx;
  box-sizing: border-box;
}

.empty-tip image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
} 